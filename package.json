{
  "name": "justodo",
  "displayName": "justodo",
  "description": "A simple code todos marker and storer for vs code",
  "version": "1.0.4",
  "publisher": "samTime101",
  "icon": "images/icon.png",
  "author": {
    "name": "samTime101",
    "url": "https://github.com/samTime101"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samTime101/justodo.git"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todos.createTodo",
        "title": "Add TODO"
      },{
        "command": "todos.markTodo",
        "title": "Mark TODO as Done"
      },{
        "command": "todos.searchTodos",
        "title": "Search TODOs in Current File"
      }
    ],
    "keybindings": [
      {
        "command": "todos.createTodo",
        "key": "ctrl+shift+6",
        "when": "editorTextFocus"
      },
      {
        "command": "todos.markTodo",
        "key": "ctrl+shift+7",
        "when": "editorTextFocus"
      },
      {
        "command": "todos.searchTodos",
        "key": "ctrl+shift+8",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
